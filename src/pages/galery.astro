---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Galería - Soda Stereo Fan Club">
  <main class="mt-24">
    <h1 class="text-center text-4xl font-semibold text-white mb-8">Galería</h1>
    <div
      class="gallery grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4"
    >
      <img
        src="/soda1.jpg"
        alt="Soda Stereo 1"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda2.jpg"
        alt="Soda Stereo 2"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda3.jpg"
        alt="Soda Stereo 3"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda4.jpg"
        alt="Soda Stereo 4"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda5.jpg"
        alt="Soda Stereo 5"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda6.jpg"
        alt="Soda Stereo 6"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda7.jpg"
        alt="Soda Stereo 7"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/soda8.jpg"
        alt="Soda Stereo 8"
        class="gallery-img cursor-pointer object-cover"
      />
      <img
        src="/back.jpg"
        alt="Soda Stereo 8"
        class="gallery-img cursor-pointer object-cover"
      />
    </div>

    <!-- Modal para la imagen ampliada -->
    <div
      id="modal"
      class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-75 hidden"
    >
      <img id="modal-img" class="max-h-full max-w-full" />
    </div>
  </main>
</Layout>

<style>
  body {
    background-color: rgb(0, 80, 137);
  }

  .gallery-img {
    width: 100%;
    height: 300px;
    transition:
      transform 0.2s,
      filter 0.2s;
  }

  .gallery-img:hover {
    transform: scale(1.05);
  }

  .gallery-img.dimmed {
    filter: brightness(0.5);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const images = document.querySelectorAll(".gallery-img");
    const modal = document.getElementById("modal");
    const modalImg = document.getElementById("modal-img");

    images.forEach((img) => {
      img.addEventListener("click", function () {
        images.forEach((otherImg) => {
          if (otherImg !== img) {
            otherImg.classList.add("dimmed");
          }
        });
        modalImg.src = img.src;
        modal.classList.remove("hidden");
      });
    });

    modal.addEventListener("click", function () {
      images.forEach((img) => {
        img.classList.remove("dimmed");
      });
      modal.classList.add("hidden");
    });
  });
</script>
